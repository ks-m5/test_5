<%= form_for(@product) do |f| %>

	<p>アーティスト名</p>
	<%= f.text_field :artist %>

	<p>CD名</p>
	<%=f.text_field :album %>

	</br>
	<%= f.attachment_field :image %>

	<p>ジャンル</p>
	<%= f.text_field :genre %>

	<p>レーベル</p>
	<%= f.text_field :label %>

	<p>CDの状態</p>
	<%= f.text_field :state %>

	<p>曲名</p>
	<%= f.text_area :song %>

	<p>商品の紹介</p>
	<%= f.text_area :introduction %>

	<p>値段</p>
	<%= f.text_field :price %>円

	<p>枚数</p>
	<%= f.text_field :count %>枚

	<%= f.submit "出品する" %>

<% end %>